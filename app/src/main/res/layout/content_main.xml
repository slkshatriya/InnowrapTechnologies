<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:id="@+id/headerImg"
        android:src="@drawable/headbanner"
        android:layout_below="@id/toolbar"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topCard"
        app:cardElevation="10dp"
        android:layout_below="@id/headerImg">

        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn More About how we're \n    responding to COVID-19"
                android:textSize="25sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/blue"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tell me more"
                    android:textSize="18sp"
                    android:textColor="#000"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/bottomscroll"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <GridLayout
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#FFD300"
                            android:gravity="center"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:text="New Sponsorship"/>
                        </LinearLayout>

                        <ImageView
                            android:src="@drawable/pic2"
                            android:id="@+id/imgview"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#FFD300"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:textStyle="bold"
                                android:text="Reagale"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_arrow"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#649048"
                            android:orientation="vertical"
                            android:layout_height="70dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:text="Johana"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:text="Birthday in 2 months"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#88a464"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:textStyle="bold"
                                android:text="Give a gift"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_arrow"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:src="@drawable/pic3"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#B56727"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:textStyle="bold"
                                android:text="How to give amazon \n and give as you \n live"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#a8a484"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:text="Weather"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_arrow"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>

                        <ImageView
                            android:src="@drawable/weatherimg"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#a8a484"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:textStyle="bold"
                                android:text="Reagale"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_arrow"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="12dp"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#FFD300"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:text="Sergio"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:text="1 year of"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:text="sponsorship"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:text="Thank you"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:src="@drawable/circularface"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#FFD300"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:text="New Photo"/>
                        </LinearLayout>

                        <ImageView
                            android:src="@drawable/pic1"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="12dp"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:layout_height="100dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFD300"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:text="Thank you"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-light"
                                android:text="5 gifts given this year"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#FFD300"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:textStyle="bold"
                                android:text="My children"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_arrow"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="12dp"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#882c34"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:text="Sergio"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="30dp"
                                android:fontFamily="sans-serif-light"
                                android:text="give thanks that sergio \nregular home \nvisits from caring \nproject staff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#b0545c"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:textStyle="bold"
                                android:text="Pray now"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_arrow"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>